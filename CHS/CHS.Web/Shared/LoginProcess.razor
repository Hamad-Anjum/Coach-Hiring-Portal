
@layout LoginLayout
@page "/LoginProcess"
<style>
    .text-center {
        text-align: center;
        color: rgb(99, 99, 99);
        margin-top: 0px;
    }

    #parent {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        /*background: linear-gradient(rgba(40, 167, 70, 0.401), rgba(23, 163, 184, 0.401));*/
        background-color: transparent;
    }

    .sk-chase {
        width: 140px;
        height: 140px;
        top: 30%;
        left: 47.5%;
        position: relative;
        animation: sk-chase 3.5s infinite linear both;
        z-index: 1;
    }

    .sk-chase-dot {
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0;
        top: 0;
        animation: sk-chase-dot 2.0s infinite ease-in-out both;
    }

        .sk-chase-dot:before {
            content: '';
            display: block;
            width: 17%;
            height: 17%;
            background-color: black;
            border-radius: 100%;
            animation: sk-chase-dot-before 3.0s infinite ease-in-out both;
        }

        .sk-chase-dot:nth-child(1) {
            animation-delay: -1.1s;
        }

        .sk-chase-dot:nth-child(2) {
            animation-delay: -1.0s;
        }

        .sk-chase-dot:nth-child(3) {
            animation-delay: -0.9s;
        }

        .sk-chase-dot:nth-child(4) {
            animation-delay: -0.8s;
        }

        .sk-chase-dot:nth-child(5) {
            animation-delay: -0.7s;
        }

        .sk-chase-dot:nth-child(6) {
            animation-delay: -0.6s;
        }

        .sk-chase-dot:nth-child(7) {
            animation-delay: -0.4s;
        }

        .sk-chase-dot:nth-child(1):before {
            animation-delay: -1.1s;
            background-color: #17A2B8;
        }

        .sk-chase-dot:nth-child(2):before {
            animation-delay: -1.0s;
            background-color: #17A2B8;
        }

        .sk-chase-dot:nth-child(3):before {
            animation-delay: -0.9s;
            background-color: #28A745;
        }

        .sk-chase-dot:nth-child(4):before {
            animation-delay: -0.8s;
            background-color: #28A745;
        }

        .sk-chase-dot:nth-child(5):before {
            animation-delay: -0.7s;
            background-color: #C82333;
        }

        .sk-chase-dot:nth-child(6):before {
            animation-delay: -0.6s;
            background-color: #C82333;
        }

        .sk-chase-dot:nth-child(7):before {
            animation-delay: -0.4s;
            background-color: #28A745;
        }

    @@keyframes sk-chase {
        100% {
            transform: rotate(360deg);
        }
    }

    @@keyframes sk-chase-dot {

        80%,
        100% {
            transform: rotate(360deg);
        }
    }

    @@keyframes sk-chase-dot-before {
        0% {
            transform: scale(0.5);
        }

        25% {
            transform: scale(0.4);
        }

        50% {
            transform: scale(0.3);
        }

        75% {
            transform: scale(0.2);
        }

        100% {
            transform: scale(0.1);
        }
    }
</style>
<div id="parent">
    <div class="sk-chase">
        <div class="sk-chase-dot"></div>
        <div class="sk-chase-dot"></div>
        <div class="sk-chase-dot"></div>
        <div class="sk-chase-dot"></div>
        <div class="sk-chase-dot"></div>
        <div class="sk-chase-dot"></div>
        @*<div class="sk-chase-dot"></div>*@
    </div>
</div>
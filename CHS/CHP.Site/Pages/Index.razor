<section class="s-club-cards club-cards-lite club-cards-fitness">
    <span class="section-title-bg">Gym Membership</span>
    <div class="container">
        <h2 class="title-decor">Gym <span>Membership</span></h2>
        <p class="slogan">Maecenas consequat ex id lobortis venenatis. Mauris id erat enim.</p>
        @if (_model.GymMemberShips == null)
        {
            <div class="text-center">
                <Ellipsis />
            </div>
        }
        else if (_model.GymMemberShips.Count() == 0)
        {
            <MatH3>Nothing Found. Try again Later.</MatH3>
        }
        else
        {
            int a = 1;
            var ids = new List<Guid>();
            <div class="row">
                @foreach (var item in _model.GymMemberShips)
                {
                    if (!ids.Any(x => x.Equals(item.SubscriptionOwnerId)))
                    {
                        ids.Add(item.SubscriptionOwnerId);
                        <div class="col-md-4 club-card-col">
                            <div class="club-card-item" style="background-image: url(assets/img/bg-price-@(a).svg);">
                                <div class="price-cover">
                                    <div class="price">
                                        <span>@(new CultureInfo("ar-SA").NumberFormat.CurrencySymbol)</span>@item.Price
                                    </div>
                                    <div class="date">@item.SubscriptionMonths months</div>
                                </div>
                                <div class="club-card-text">
                                    @if (item.AboutYourSelf.Length > 100)
                                    {
                                        if (item.IsFullText)
                                        {
                                            <text>@item.AboutYourSelf</text>
                                            <a href="javascript:void(0)" class="ml-2"
                                               @onclick="@(() => ToggleMemberShipFullText(item.SubscriptionId))">
                                                ...show less
                                            </a>
                                        }
                                        else
                                        {
                                            <text>@item.AboutYourSelf.Substring(0, 97)</text>
                                            <a href="javascript:void(0)" class="ml-2"
                                               @onclick="@(() => ToggleMemberShipFullText(item.SubscriptionId))">
                                                ...show more
                                            </a>
                                        }
                                    }
                                    else
                                    {
                                        <text>@item.AboutYourSelf</text>
                                    }
                                </div>
                                <a href="@($"{Constant.PortalUrl}Profile/{item.SubscriptionOwnerId}")" class="btn btn-custom">order now</a>
                            </div>
                        </div>
                        a++;
                        if (a > 3)
                        {
                            break;
                        }
                    }
                }
            </div>
        }
    </div>
</section>
<!-- ============ S-CLUB-CARDS END ============ -->
